{% extends 'baseClient.html.twig' %}
{% block head %}

{% endblock %}
{% block container  %}
        <center>
        <h1 ALIGN=center style="color:#4ecdc4  ;">Liste des evenements personnels</h1>
           </br>
         </br>
       </br>
   
  {% for i in Events %}
   <div class="row">
      <div class="col-md-4">
         <div class="card mb-4">
            <img src="{{ asset('imageupload/' ~ i.nomimage) }}"  width="160"
            height="160"/>
            <div class="card-body">
               
               <h3 class="card-title">Nom de l'evenement:{{ i.nom }}</h3>
               <h3 class="card-title">Date de l'evenement:{{ i.date|date('d/m/y')}}</h3>
                 <h3 class="card-title">Lieu l'evenement:{{ i.lieu }}</h3>


                                       

               <h3 class="card-title">Description:{{ i.Description }}</h3>
               <h3 class="card-title">Groupe de l'evenement:{{ i.groupe.nom }}</h3>
               <a href="{{ path("pdf",{'id':i.id}) }}" class="btn btn-success">pdf </a>
               <a href="{{ path('ModifierEvenement',{'id':i.id}) }}" class="btn btn-success">Modifier </a>
              <a href="{{ path('Supprimer',{'id':i.id}) }}"class="btn btn-danger" onclick="return confirm('Voulez-vous vraiment supprimer événement ?') ">Supprimer </a>
            </div>
         </div>
            </br>
</br>
</br>
      </div>
      
       {% endfor %}
   </div>
  
 
   </div>
   
  
   <hr>
   <a href="http://www.jquery2dotnet.com/" class="mx-auto pb-3 text-center">
   
   </a>
</div>
</center>
{% endblock  %}